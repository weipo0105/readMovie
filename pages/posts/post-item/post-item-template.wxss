.post-contaniner{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom: 40rpx;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
}
.post-author{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left:20rpx;
  margin-bottom:10px;
  font-size: 26rpx;
  vertical-align: middle;
}
.post-title{
  font-size: 24rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  margin-left:16px;
  width: 100%;
  height: 340rpx;
  margin:auto 0;
  margin-bottom: 15px;
}
.post-content{
  color:#666;
  font-size: 28rpx;
  display:block;
  margin-top:-45rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 20rpx;
  flex-direction: row;
  line-height: 16rpx;
  margin-left:18rpx;
}
.post-like-image{
  height:13px;
  width:13px;
  margin-right:8px;
  vertical-align: middle;
}
.post-like-font{
  margin-right:20rpx;
  vertical-align: middle;
  color: #a2a2a2;
}